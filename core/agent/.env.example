# SYMBI Agent Framework Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# ORCHESTRATOR CONFIGURATION
# =============================================================================
ORCHESTRATOR_URL=http://localhost:3000
AGENT_API_KEY=your-agent-api-key-here

# =============================================================================
# REPOSITORY AGENT CONFIGURATION
# =============================================================================
REPOSITORY_URL=https://github.com/your-org/your-repo
REPOSITORY_BRANCH=main
REPOSITORY_TOKEN=ghp_your_github_token_here
WEBHOOK_URL=https://your-domain.com/webhooks/github
AUTO_MERGE=false
REVIEW_REQUIRED=true

# GitLab Configuration (alternative to GitHub)
# REPOSITORY_URL=https://gitlab.com/your-org/your-repo
# REPOSITORY_TOKEN=glpat-your_gitlab_token_here

# Bitbucket Configuration (alternative to GitHub/GitLab)
# REPOSITORY_URL=https://bitbucket.org/your-org/your-repo
# REPOSITORY_TOKEN=your_bitbucket_app_password

# =============================================================================
# WEBSITE AGENT CONFIGURATION
# =============================================================================
WEBSITE_DOMAIN=your-website.com
DEPLOYMENT_TARGET=vercel
BUILD_COMMAND=npm run build
OUTPUT_DIRECTORY=dist
ENV_VARIABLES={"NODE_ENV":"production","API_URL":"https://api.your-website.com"}

# Alternative deployment targets:
# DEPLOYMENT_TARGET=netlify
# DEPLOYMENT_TARGET=aws-s3
# DEPLOYMENT_TARGET=github-pages

# =============================================================================
# INTEGRATION AGENT CONFIGURATION
# =============================================================================
SOURCE_SYSTEM=Salesforce
TARGET_SYSTEM=SAP
MAPPING_RULES={"Account.Id":"Customer.CustomerNumber","Account.Name":"Customer.CompanyName"}
SYNC_INTERVAL=600000
BIDIRECTIONAL=false

# Example CRM to ERP mapping rules:
# MAPPING_RULES={"Account.Id":"Customer.CustomerNumber","Account.Name":"Customer.CompanyName","Contact.Email":"Customer.PrimaryEmail","Opportunity.Amount":"Deal.Value"}

# Example E-commerce to Inventory mapping rules:
# MAPPING_RULES={"product.id":"item.internalId","product.title":"item.displayName","variant.sku":"item.upcCode","variant.inventory_quantity":"item.quantityAvailable"}

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# Production settings:
# NODE_ENV=production
# LOG_LEVEL=error

# Staging settings:
# NODE_ENV=staging
# LOG_LEVEL=warn

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable/disable SSL verification (use with caution in development)
SSL_VERIFY=true

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Timeout settings (in milliseconds)
REQUEST_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=60000

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Enable metrics collection
METRICS_ENABLED=true
METRICS_INTERVAL=30000

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# Log file settings
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/agent.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# =============================================================================
# DATABASE CONFIGURATION (if using persistent storage)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/symbi_agents
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# =============================================================================
# REDIS CONFIGURATION (if using Redis for caching/queuing)
# =============================================================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_TIMEOUT=5000

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#agents

# Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# NOTIFICATION_EMAIL=admin@your-domain.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
DEBUG=false

# Mock external services in development
MOCK_EXTERNAL_SERVICES=false

# Development server settings
DEV_SERVER_PORT=3001
DEV_SERVER_HOST=localhost