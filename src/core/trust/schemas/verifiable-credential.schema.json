{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://symbi.trust/schemas/verifiable-credential.json",
  "title": "Verifiable Credential",
  "description": "W3C Verifiable Credentials compliant credential",
  "type": "object",
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject", "proof"],
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "minItems": 1,
      "contains": {
        "const": "https://www.w3.org/2018/credentials/v1"
      }
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "contains": {
        "const": "VerifiableCredential"
      }
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^did:[a-z0-9]+:[a-zA-Z0-9._-]+$"
        },
        {
          "type": "object",
          "required": ["id"],
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^did:[a-z0-9]+:[a-zA-Z0-9._-]+$"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^did:[a-z0-9]+:[a-zA-Z0-9._-]+$"
        }
      }
    },
    "credentialStatus": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "enum": ["StatusList2021Entry", "RevocationList2020Status"]
        },
        "statusListIndex": {
          "type": "string",
          "pattern": "^[0-9]+$"
        },
        "statusListCredential": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "proof": {
      "type": "object",
      "required": ["type", "created", "verificationMethod", "proofPurpose", "proofValue"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Ed25519Signature2020",
            "JsonWebSignature2020",
            "EcdsaSecp256k1Signature2019",
            "RsaSignature2018"
          ]
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "verificationMethod": {
          "type": "string",
          "format": "uri"
        },
        "proofPurpose": {
          "type": "string",
          "enum": ["assertionMethod", "authentication", "keyAgreement", "capabilityInvocation", "capabilityDelegation"]
        },
        "proofValue": {
          "type": "string",
          "pattern": "^z[1-9A-HJ-NP-Za-km-z]+$"
        },
        "jws": {
          "type": "string"
        }
      }
    }
  }
}
